#! /usr/bin/env sh

POOL="$(zfs-poolname)"

zfs list -t snapshot
echo
zfs list -o usedsnap,name,used,avail,refer,mountpoint | grep 'MOUNTPOINT$\| /\S*$'
echo
zpool list -o cap,free,alloc,size
echo
zpool get -H -o name,property,value dedup "$POOL"
zfs get -H -o name,property,value compressratio "$POOL"
echo
zpool iostat -l
